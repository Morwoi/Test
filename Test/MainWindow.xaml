<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dg_Main" HorizontalAlignment="Left" Height="331" Margin="10,80,0,0" VerticalAlignment="Top" Width="773">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="*" SortDirection="Ascending"/> 
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="*"/>
 
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="btn_Window2" Content="Window2" HorizontalAlignment="Left" Margin="201,39,0,0" VerticalAlignment="Top" Width="75" Click="btn_Window2_Click"/>
    </Grid>
 </Window>
